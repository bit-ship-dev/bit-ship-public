{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "declaration": false,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "tslib" : ["./node_modules/tslib/tslib.d.ts"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "types": ["node"],
  "exclude": ["node_modules", "dist"],
}
